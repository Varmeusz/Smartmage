<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Smartmage page index route</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="content">
               <block class="Magento\Backend\Block\Template" template="Smartmage_Smartmage::helloworld.phtml"/>
               <block class="Magento\Backend\Block\Template" template="Smartmage_Smartmage::displaySystemConfig.phtml"/>
        </referenceBlock>
    </body>
</page>